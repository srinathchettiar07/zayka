            <h1 class="text-3xl md:text-4xl font-bold mb-8 md:mb-12 text-center text-gray-800">Explore Our Best Chefs</h1>

            <!-- Chef Swiper -->
            <div class="w-full max-w-5xl px-4 mx-auto">
                <div class="swiper mySwiper">
                    <div class="swiper-wrapper">
                        <% chefs.forEach(chef => { %>
                            <div class="swiper-slide flex flex-col items-center">
                                <div class="w-20 h-20 rounded-full overflow-hidden">
                                    <img src="/<%= chef.image_url %>" class="w-full h-full object-cover" alt="<%= chef.name %>">
                                </div>
                                <p class="text-xs mt-2 text-center font-medium"><%= chef.name %></p>
                            </div>
                        <% }) %>
                    </div>
                    <div class="swiper-button-next text-gray-800"></div>
                    <div class="swiper-button-prev text-gray-800"></div>
                </div>
            </div>

            <!-- Chef Cards -->
            <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 mt-12">
                <% names.forEach(chef => { %>
                    <div class="flex bg-white shadow-lg rounded-xl overflow-hidden h-48 hover:shadow-xl transition">
                        <div class="w-48 h-full">
                            <img src="<%= chef.image_url %>" alt="<%= chef.name %>" class="w-full h-full object-cover">
                        </div>
                        <div class="flex flex-col justify-between p-4 flex-1">
                            <div>
                                <h2 class="text-xl font-semibold"><%= chef.name %></h2>
                                <p class="text-sm text-gray-600 mb-2"><%= chef.description %></p>
                                <div class="text-sm text-gray-700">
                                    <span class="font-medium">Cuisine:</span> <%= chef.cuisine %><br>
                                    <span class="font-medium">Location:</span> <%= chef.place %>
                                </div>
                            </div>
                            <div class="flex justify-between items-center mt-2">
                                <span class="text-sm text-gray-500">⏱ <%= chef.delivery_time %> mins</span>
                                <div class="flex items-center text-yellow-500 font-medium">
                                    ★ <%= chef.stars %> / 5
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>

            <!-- Meal Time Swiper -->
            <h1 class="text-3xl md:text-4xl font-bold mb-8 md:mb-12 text-center text-gray-800 mt-16">Explore by Meal time</h1>
            <div class="w-full max-w-5xl px-4 mx-auto">
                <div class="swiper mySwiper">
                    <div class="swiper-wrapper">
                        <% time.forEach(chef => { %>
                            <div class="swiper-slide flex flex-col items-center">
                                <div class="w-20 h-20 rounded-full overflow-hidden">
                                    <img src="<%= chef.imageUrl %>" class="w-full h-full object-cover" alt="<%= chef.type %>">
                                </div>
                                <p class="text-xs mt-2 text-center font-medium"><%= chef.type %></p>
                            </div>
                        <% }) %>
                    </div>
                    <div class="swiper-button-next text-gray-800"></div>
                    <div class="swiper-button-prev text-gray-800"></div>
                </div>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script>
        var swiper = new Swiper(".mySwiper", {
            slidesPerView: 3,
            spaceBetween: 20,
            centeredSlides: true,
            loop: true,
            autoplay: {
                delay: 2500,
                disableOnInteraction: false,
            },
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
        });
    </script>

